@model ASPNET_MVC5.Models.View.CandidatoViewModel

@{
    ViewBag.Title = "Deletar candidato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remoção de candidato</h2>

<h3>Tem certeza que deseja deletar este candidato?</h3>
<div>
    <hr />
    <h4>Informações do candidato</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a listagem", "List")
        </div>
    }
</div>
